# ============================================
# AIOMetadata Docker - Environment Variables
# Copy this file to .env and fill in the values
# Full docs: https://github.com/cedya77/aiometadata/blob/dev/docs/ENVIRONMENT_VARIABLES.md
# ============================================

# ========== REQUIRED ==========

# Your public domain (without trailing slash)
HOST_NAME=https://your-domain.com

# TMDB API key - Required for movie/tv metadata
# Get one at: https://www.themoviedb.org/settings/api
TMDB_API=

# Database URI (SQLite or PostgreSQL)
DATABASE_URI=sqlite://addon/data/db.sqlite
# DATABASE_URI=postgresql://user:password@localhost:5432/aiometadata

# Redis connection URL
REDIS_URL=redis://redis:6379

# ========== OPTIONAL - API Keys ==========

# TVDB API key for series/anime metadata
TVDB_API_KEY=

# Fanart.tv API key for logos and backgrounds
# Get one at: https://fanart.tv/get-an-api-key/
FANART_API_KEY=

# RatingPosterDB API key for rating posters
# Get one at: https://ratingposterdb.com/
RPDB_API_KEY=

# MDBList API key for personal lists
# Get one at: https://mdblist.com/
MDBLIST_API_KEY=

# Gemini API key for AI search features
GEMINI_API_KEY=

# ========== OPTIONAL - AniList Integration ==========
# Get credentials at: https://anilist.co/settings/developer

ANILIST_CLIENT_ID=
ANILIST_CLIENT_SECRET=
ANILIST_REDIRECT_URI=https://your-domain.com/anilist/callback

# ========== OPTIONAL - Trakt Integration ==========
# Get credentials at: https://trakt.tv/oauth/applications

TRAKT_CLIENT_ID=
TRAKT_CLIENT_SECRET=
TRAKT_REDIRECT_URI=https://your-domain.com/api/auth/trakt/callback

# ========== OPTIONAL - Server Configuration ==========

# Server port (default: 1337)
PORT=1337

# Node environment
NODE_ENV=production

# Logging level: silent, fatal, error, warn, info, debug, trace, verbose
LOG_LEVEL=info

# Timezone (e.g., America/New_York, Europe/Paris)
# TZ=UTC

# Admin key for dashboard access
ADMIN_KEY=

# Addon password protection
ADDON_PASSWORD=

# Custom addon name suffix (e.g., "| My Server")
# ADDON_NAME_SUFFIX=

# Custom logo URL
# ADDON_LOGO_URL=https://yourdomain.com/yourlogo.png

# ========== OPTIONAL - Cache Configuration ==========

# Metadata cache TTL in seconds (default: 604800 = 7 days)
META_TTL=604800

# Catalog cache TTL in seconds (default: 86400 = 24 hours)
CATALOG_TTL=86400

# Items per catalog page
CATALOG_LIST_ITEMS_SIZE=20

# Enable cache warming on startup
ENABLE_CACHE_WARMING=true

# Cache warmup mode: essential or comprehensive
CACHE_WARMUP_MODE=essential

# Cache warming interval in hours
CACHE_WARM_INTERVAL_HOURS=24

# ========== OPTIONAL - Proxy Configuration ==========

# SOCKS proxy for all requests
# SOCKS_PROXY_URL=socks5://user:pass@host:port

# HTTP/HTTPS proxy
# HTTP_PROXY=
# HTTPS_PROXY=

# SOCKS proxy for specific services
# TMDB_SOCKS_PROXY_URL=
# MAL_SOCKS_PROXY_URL=
